@model ProyectoFinalAgenciaTours.Application.DTOs.CreateDestinoDto

@{

    ViewData["Title"] = "Add - Destino";

    var _addError = ViewData.ModelState["_addError"]?.Errors
    .Select(e => e.ErrorMessage).FirstOrDefault(); ;
}

@section VendorStyles {

    <link rel="stylesheet" href="~/vendor/libs/select2/select2.css" />
    <link rel="stylesheet" href="~/vendor/libs/tagify/tagify.css" />
    <link rel="stylesheet" href="~/vendor/libs/bootstrap-select/bootstrap-select.css" />
    <link rel="stylesheet" href="~/vendor/libs/typeahead-js/typeahead.css" />
}

@section VendorScripts {

    <script src="~/vendor/libs/select2/select2.js"></script>
    <script src="~/vendor/libs/tagify/tagify.js"></script>
    <script src="~/vendor/libs/bootstrap-select/bootstrap-select.js"></script>
    <script src="~/vendor/libs/typeahead-js/typeahead.js"></script>
    <script src="~/vendor/libs/bloodhound/bloodhound.js"></script>

    <script src="~/js/main.js"></script>

    <script src="~/js/forms-selects.js"></script>
    <script src="~/js/forms-tagify.js"></script>

}

<form asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-sm-6 form-control-validation">
        <div class="form-floating form-floating-outline">
            <input type="number" asp-for="CapacidadMaxima" class="form-control" name="CapacidadMaxima" placeholder="500" />
            <span asp-validation-for="CapacidadMaxima" class="text-danger"></span>
            <label for="CapacidadMaxima">Capacidad Maxima</label>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TipoDestino"></label>
        <input asp-for="TipoDestino" class="form-control" />
        <span asp-validation-for="TipoDestino" class="text-danger"></span>
    </div>

    <div class="form-floating form-floating-outline">
        <select asp-for="PaisId" asp-items="ViewBag.Paises" id="select2Basic" class="form-control select2 form-select" data-allow-clear="true">
            <option value="">Seleccione un estudiante</option>
        </select>
        <label for="select2Basic" class="form-label">Pais</label>
        <span asp-validation-for="PaisId" class="text-danger"></span>
    </div>


    <div class="form-group form-check">
        <input class="form-check-input" asp-for="Status" />
        <label class="form-check-label" asp-for="Status"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

