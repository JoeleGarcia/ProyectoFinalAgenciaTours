@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
@if (TempData["MateriaError"] is string msg)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        @msg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    @TempData.Remove("MateriaError");
}


@if (TempData.ContainsKey("TransactionsToast") && TempData.ContainsKey("DisplayToast") && (bool?)TempData["DisplayToast"] == true)
{
    var transactionsToastJson = TempData["TransactionsToast"] as string;
    if (!string.IsNullOrEmpty(transactionsToastJson))
    {
        var transactionsToast = JsonConvert.DeserializeObject<List<TransactionsToast>>(transactionsToastJson);

        // Check if transactionsToast is not null before proceeding
        if (transactionsToast?.Count > 0)
        {
            // Display the toast
            <div class="toast-container end-0 m-1 me-4">
                @foreach (var toast in transactionsToast)
                {
                    <div class="toast @toast.CssClass" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="true" data-delay="2000">
                        <div class="toast-body text-center text-white">
                            @toast.Message
                        </div>
                    </div>
                }
            </div>
        }
    }

    // Remove TempData flag to prevent displaying the toast on subsequent page reloads
    TempData.Remove("DisplayToast");

}

<div class="card">
    <div class="card-datatable table-responsive pb-0">
        <table id="transactionsTable" class="table">
            <thead>
                <tr class="text-nowrap">
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CodigoISO)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Moneda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiereVisa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var pais in Model)
                    {
                        string statusClass = "info"; // Default value if item.Status is null or doesn't match any case

                        bool lowerCaseStatus = pais.Status;

                        if (lowerCaseStatus.Equals(true))
                        {
                            statusClass = "success";
                        }
                        else if (lowerCaseStatus.Equals(false))
                        {
                            statusClass = "warning";
                        }

                        <tr>
                            <td></td>
                            <td class="text-nowrap fw-medium text-heading">
                                @Html.DisplayFor(modelItem => pais.Nombre)
                            </td>
                            <td class="text-nowrap fw-medium text-heading">
                                @*<img src="https://raw.githubusercontent.com/ashhitch/ISO-country-flags-icons/refs/heads/master/src/flags/png/@(pais.CodigoISO.ToLower()).png" alt="Mobile" width="34" height="34" class="rounded">*@
                                <i class="fis fi fi-@(pais.CodigoISO.ToLower()) rounded-circle fs-3"></i>
                            </td>
                            <td class="text-nowrap fw-medium text-heading">
                                @Html.DisplayFor(modelItem => pais.Moneda)
                            </td>
                            <td>
                                <div>
                                    @if (pais.RequiereVisa.Equals(true))
                                    {
                                        @("Si");

                                    }

                                    @if (pais.RequiereVisa.Equals(false))
                                    {
                                        @("No");
                                    }

                                </div>
                            </td>
                            <td class="text-nowrap fw-medium text-heading">
                                @Html.DisplayFor(modelItem => pais.FechaCreacion)
                            </td>
                            <td>
                                <div class="badge bg-label-@statusClass rounded-pill">


                                    @if (pais.Status.Equals(true))
                                    {
                                        @("Activo");

                                    }

                                    @if (pais.Status.Equals(false))
                                    {
                                        @("Inactivo");
                                    }

                                </div>
                            </td>
                            <td class="text-nowrap">
                                <a asp-action="Update" asp-route-id="@pais.Id" class="btn btn-sm btn-text-secondary rounded-pill btn-icon shadow-none"><i class='icon-base ri ri-edit-line icon-18px'></i></a>
                                <a href="/pais/Delete/@pais.Id" class="btn btn-sm btn-text-secondary rounded-pill btn-icon shadow-none delete-transaction" data-transaction-username="@Html.DisplayFor(modelItem => pais.Nombre)"><i class="icon-base ri ri-delete-bin-5-line icon-18px"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasAddUser" aria-labelledby="offcanvasAddUserLabel">
        <div class="offcanvas-header border-bottom">
            <h5 id="offcanvasAddUserLabel" class="offcanvas-title">Agregar pais</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body mx-0 flex-grow-0 h-100">

            <form asp-action="Add" asp-controller="pais" method="post">
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" name="Nombre" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="CodigoISO">Codigo ISO</label>
                    <input type="text" name="CodigoISO" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="IdiomaOficial">Idioma Oficial</label>
                    <input type="text" name="IdiomaOficial" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Moneda">Moneda</label>
                    <input type="text" name="Moneda" class="form-control" />
                </div>
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" data-val="true" data-val-required="The RequiereVisa field is required." id="RequiereVisa" name="RequiereVisa" value="true">
                    <label class="form-check-label" for="RequiereVisa">Requiere Visa</label>
                </div>
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" data-val="true" data-val-required="The Status field is required." id="Status" name="Status" value="true">
                    <label class="form-check-label" for="Status">Status</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

</div>