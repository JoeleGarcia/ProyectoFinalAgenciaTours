@{
  TempData.Keep();
  string? currentPage =  ViewContext.HttpContext.Request.Path;
  ViewData["containerNav"] ??= "container-fluid";
}

<!-- Menu -->
<aside id="layout-menu" class="layout-menu-horizontal menu-horizontal  menu flex-grow-0">
    <div class='@ViewData["containerNav"] d-flex h-100'>
        @* ! Starter Kit menu-items *@
        <ul class="menu-inner">
            <li class='menu-item@(currentPage == "/" ? " active" : "")'>
                <a asp-controller="Home" asp-action="Index" class="menu-link">
                    <i class="menu-icon icon-base ri ri-home-smile-line"></i>
                    <div data-i18n="Inicio">Inicio</div>
                </a>
            </li>
            <li class='menu-item@((currentPage == "/Pais" | currentPage == "/pais") ? " active" : "")'>
                <a asp-controller="Pais" asp-action="Index" class="menu-link">
                    <i class="menu-icon icon-base ri ri-flag-line"></i>
                    <div data-i18n="Paises">Paises</div>
                </a>
            </li>
            <li class='menu-item@((currentPage == "/Destino" | currentPage == "/destino") ? " active" : "")'>
                <a asp-controller="Destino" asp-action="Index" class="menu-link">
                    <i class="menu-icon icon-base ri ri-map-pin-2-line"></i>
                    <div data-i18n="Destinos">Destinos</div>
                </a>
            </li>
            <li class='menu-item@((currentPage == "/Tours" | currentPage == "/tours") ? " active" : "")'>
                <a asp-controller="Tours" asp-action="Index" class="menu-link">
                    <i class="menu-icon icon-base ri ri-flight-takeoff-fill"></i>
                    <div data-i18n="Tours">Tours</div>
                </a>
            </li>
        </ul>
    </div>
</aside>
<!-- / Menu -->
