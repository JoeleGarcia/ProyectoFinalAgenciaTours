@*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
@if (TempData["MateriaError"] is string msg)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        @msg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    @TempData.Remove("MateriaError");
}


@if (TempData.ContainsKey("TransactionsToast") && TempData.ContainsKey("DisplayToast") && (bool?)TempData["DisplayToast"] == true)
{
    var transactionsToastJson = TempData["TransactionsToast"] as string;
    if (!string.IsNullOrEmpty(transactionsToastJson))
    {
        var transactionsToast = JsonConvert.DeserializeObject<List<TransactionsToast>>(transactionsToastJson);

        // Check if transactionsToast is not null before proceeding
        if (transactionsToast?.Count > 0)
        {
            // Display the toast
            <div class="toast-container end-0 m-1 me-4">
                @foreach (var toast in transactionsToast)
                {
                    <div class="toast @toast.CssClass" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="true" data-delay="2000">
                        <div class="toast-body text-center text-white">
                            @toast.Message
                        </div>
                    </div>
                }
            </div>
        }
    }

    // Remove TempData flag to prevent displaying the toast on subsequent page reloads
    TempData.Remove("DisplayToast");

}

<div class="card">
    <div class="card-datatable table-responsive pb-0">
        <table id="transactionsTable" class="table">
            <thead>
                <tr class="text-nowrap">
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Duracion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFinalizacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ITBIS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Any() == true)
                {
                    @foreach (var tour in Model)
                    {
                        string statusClass = "info"; // Default value if item.Status is null or doesn't match any case

                        string lowerCaseStatus = tour.Estado;

                        if (lowerCaseStatus.Equals("Vigente"))
                        {
                            statusClass = "success";
                        }
                        else if (lowerCaseStatus.Equals(false))
                        {
                            statusClass = "warning";
                        }

                        <tr>
                            <td></td>
                            <td class="sorting_1">
                                <div class="d-flex justify-content-start align-items-center user-name">
                                    <div class="avatar-wrapper">
                                        <div class="avatar avatar-sm me-4">
                                            <img src="https://raw.githubusercontent.com/ashhitch/ISO-country-flags-icons/refs/heads/master/src/flags/png/@(
                                            tour.Pais.CodigoISO.ToLower()
                                            ).png" alt="Avatar" class="rounded-circle">
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <a href="app-user-view-account.html" class="text-heading text-truncate">
                                            <span class="fw-medium text-primary">
                                                @Html.DisplayFor(modelItem => tour.Nombre)
                                        </span>
                                    </a>
                                    <small>@Html.DisplayFor(modelItem => tour.Pais.Nombre)</small>
                                </div>
                            </div>
                        </td>
                        <td class="small text-center py-2">
                            @*<div class="avatar-initial py-2 bg-label-primary rounded">
                                    @(tour.CapacidadMaxima)
                                </div>*@
                            <span class="start-100 badge rounded-pill bg-primary">@(tour.Duracion)</span>
                        </td>
                        <td class="text-nowrap fw-medium text-heading">
                            @tour.FechaFinalizacion.ToString("dd/MM/yyyy")
                        </td>
                        <td class="text-nowrap fw-medium text-heading">
                            @Html.DisplayFor(modelItem => tour.ITBIS)

                        </td>
                        <td>
                            <div class="badge bg-label-@statusClass rounded-pill">


                                @if (tour.Estado.Equals("Vigente"))
                                {
                                    @("Vigente");

                                }

                                @if (tour.Estado.Equals("Vencido"))
                                {
                                    @("Vencido");
                                }

                            </div>
                        </td>
                        <td class="text-nowrap">
                            <a asp-action="Update" asp-route-id="@tour.Id" class="btn btn-sm btn-text-secondary rounded-pill btn-icon shadow-none"><i class='icon-base ri ri-edit-line icon-18px'></i></a>
                            <a href="/tour/Delete/@tour.Id" class="btn btn-sm btn-text-secondary rounded-pill btn-icon shadow-none delete-transaction" data-transaction-username="@Html.DisplayFor(modelItem => tour.Nombre)"><i class="icon-base ri ri-delete-bin-5-line icon-18px"></i></a>
                        </td>
                    </tr>
                }
                }
            </tbody>
        </table>
    </div>



    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasAddUser" aria-labelledby="offcanvasAddUserLabel">
        <div class="offcanvas-header border-bottom">
            <h5 id="offcanvasAddUserLabel" class="offcanvas-title">Agregar tour</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body mx-0 flex-grow-0 h-100">

            <form asp-action="Add" asp-controller="tour" method="post">
                <div class="form-group">
                    <label for="Nombre">Nombre</label>
                    <input type="text" name="Nombre" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Hora">Hora</label>
                    <input type="text" name="Hora" class="form-control" />
                </div>
                <div class="form-floating form-floating-outline">
                    <select asp-items="ViewBag.Paises" name="PaisId" id="select2Basic" class="form-control select2 form-select" data-allow-clear="true">
                        <option value="">Seleccione un pais</option>
                    </select>
                    <label for="select2Basic" class="form-label">Pais</label>
                </div>
                <div class="form-floating form-floating-outline">
                    <select asp-items="ViewBag.Destinos" name="DestinoId" id="select2Basic" class="form-control select2 form-select" data-allow-clear="true">
                        <option value="">Seleccione un destino</option>
                    </select>
                    <label for="select2Basic" class="form-label">Pais</label>
                </div>
                <div class="form-group">
                    <label for="Fecha">Fecha</label>
                    <input type="text" name="Fecha" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="TasaImpuesto">Tasa Impuesto</label>
                    <input type="text" name="TasaImpuesto" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Horas">Horas</label>
                    <input type="text" name="Horas" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="Precio">Precio</label>
                    <input type="text" name="Precio" class="form-control" />
                </div>
                <div class="form-group form-check">
                    <input class="form-check-input" type="checkbox" data-val="true" data-val-required="The Status field is required." id="Status" name="Status" value="true">
                    <label class="form-check-label" for="Status">Status</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

</div>